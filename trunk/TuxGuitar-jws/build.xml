<?xml version="1.0" encoding="iso-8859-1"?>

<project name="TuxGuitar-jws" basedir="." default="all">
    <description>
        TuxGuitar JWS
    </description>
		
	<property file="build.properties" />
	
	<property name="src.dir" value="./src" />
	
	<property name="build.dir" value="build" />	
	<property name="build.jar" value="./jws/files/tuxguitar-jws.jar" />
	
	<property name="plugin.class" value="org.herac.tuxguitar.gui.system.plugins.TGPlugin" />
	
	<path id="class.path">
		<pathelement location="${build.dir}"/>
		<pathelement location="${path.swt}"/>
		<pathelement location="${path.ant-contrib}"/>
		<pathelement location="/usr/share/ant/lib/ant-contrib.jar"/>
    </path >
	
	<taskdef resource="net/sf/antcontrib/antlib.xml">
		<classpath refid="class.path"/>
	</taskdef>
	
	<target name="init" depends="clean">
		<mkdir dir="${build.dir}" />
	</target>
	
	<target name="build" depends="init">		
		<echo>+------------------------------------------------------------------+</echo>
        <echo>|          B U I L D I N G   T U X G U I T A R                     |</echo>
        <echo>+------------------------------------------------------------------+</echo>
		<javac srcdir="${tuxguitar.path}" destdir="${build.dir}" debug="false" >
	    	<classpath refid="class.path"/>
	    	<include name="**/*.java"/>
	    </javac>
		
		<echo>+------------------------------------------------------------------+</echo>
        <echo>|          B U I L D I N G   T U X G U I T A R  -  P L U G I N S   |</echo>
        <echo>+------------------------------------------------------------------+</echo>
		<propertyselector property="plugin.sources.list" delimiter="," match="tuxguitar\-.*\.path" select="\0" />
		<for list="${plugin.sources.list}" param="plugin.sources" >
		    <sequential>
			    <propertycopy property="plugin.sources" from="@{plugin.sources}" override="true" />
				<javac srcdir="${plugin.sources}" destdir="${build.dir}" debug="false" >
					<classpath refid="class.path"/>
					<include name="**/*.java"/>
				</javac>
		    </sequential>
		</for>
		
		<mkdir dir="${build.dir}/META-INF/services" />
		<echo file="${build.dir}/META-INF/services/${plugin.class}" append="false">#Default Plugins${line.separator}</echo>
		<propertyselector property="plugin.classes.list" delimiter="," match="tuxguitar\-.*\.class" select="\0" />
		<for list="${plugin.classes.list}" param="plugin.classes" >
		    <sequential>
			    <propertycopy property="plugin.classes" from="@{plugin.classes}" override="true" />
		    	<echo file="${build.dir}/META-INF/services/${plugin.class}" append="true" >${plugin.classes}${line.separator}</echo>
		    </sequential>
		</for>
		
		<!-- Share Files -->
		<mkdir dir="${build.dir}/lang" />
		<copy todir="${build.dir}/lang">
			<fileset dir="${tuxguitar.share.path}/lang"/>
		</copy>
		<touch file="${build.dir}/lang/list.properties"/>
		<for param="file">
			<path>
				<fileset dir="${build.dir}/lang" includes="*.properties" />
			</path>
			<sequential>
				<propertyregex property="filename" input="@{file}" regexp=".*/([^\.]*)" replace="\1" casesensitive="true" override="true"/>
				<echo file="${build.dir}/lang/list.properties" append="true">${filename}${line.separator}</echo>
			</sequential>
		</for>
		
		<mkdir dir="${build.dir}/skins" />
		<copy todir="${build.dir}/skins">
			<fileset dir="${tuxguitar.share.path}/skins"/>
		</copy>
		<touch file="${build.dir}/skins/list.properties"/>
		<echo file="${build.dir}/skins/list.properties" append="true">Lavender${line.separator}</echo>
		<echo file="${build.dir}/skins/list.properties" append="true">blue_serious${line.separator}</echo>
		<echo file="${build.dir}/skins/list.properties" append="true">ersplus${line.separator}</echo>
		
		<mkdir dir="${build.dir}/help" />
		<copy todir="${build.dir}/help">
			<fileset dir="${tuxguitar.share.path}/help"/>
		</copy>
		<touch file="${build.dir}/help/list.properties"/>
		<for param="file">
			<path>
				<fileset dir="${build.dir}/help" includes="**" />
			</path>
			<sequential>
				<propertyregex property="filename" input="@{file}" regexp="${build.dir}/help/(.*)" select="\1" casesensitive="true" override="true"/>
				<echo file="${build.dir}/help/list.properties" append="true">${filename}${line.separator}</echo>
			</sequential>
		</for>
		
		<mkdir dir="${build.dir}/scales" />
		<copy todir="${build.dir}/scales">
			<fileset dir="${tuxguitar.share.path}/scales"/>
		</copy>
        <echo>+------------------------------------------------------------------+</echo>
        <echo>|        P A C K A G I N G   T U X G U I T A R  -  J W S           |</echo>
        <echo>+------------------------------------------------------------------+</echo>
		
		<jar destfile="${build.jar}" basedir="${build.dir}" />
		
	</target>
	
	<target name="clean">
		<delete quiet="true" dir="${build.dir}" />
	</target>
	
	<target name="keystore" depends="build">
		<genkey alias="tuxguitar" storepass="tuxguitar" keystore="${build.dir}/tuxguitar-keystore" >
			<dname>
				<param name="CN" value="TuxGuitar"/>
				<param name="OU" value="TuxGuitar"/>
				<param name="O"  value="Herac"/>
				<param name="C"  value="AR"/>
			</dname>
		</genkey>
	</target>
	
	<target name="signjars" depends="keystore">
		<signjar alias="tuxguitar" keystore="${build.dir}/tuxguitar-keystore" storepass="tuxguitar" keypass="tuxguitar">
			<fileset dir="./jws/files" includes="*.jar" />
		</signjar>
	</target>
	
	<target name="share">
	    <jar destfile="share.jar">
    	    <fileset dir="${path.tuxguitar.share}" includes="**/*"/>
	    </jar>
	</target>
	
	<target name="all" depends="signjars" />
	
</project>
