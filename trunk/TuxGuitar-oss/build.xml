        <echo>|        P A C K A G I N G   T U X G U I T A R  -  O S S             |</echo>
        <echo>+--------------------------------------------------------------------+</echo>
		
        <jar destfile="${build.jar}" basedir="${build.dir}" />
		<delete quiet="true" dir="${build.dir}" />
	</target>


	<target name="all" depends="build" />	
</project>
