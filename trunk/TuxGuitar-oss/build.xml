        <echo>+--------------------------------------------------------------------+</echo>		
	    
		<javac srcdir="${src.dir}" destdir="${build.dir}" debug="false" >
	    	<classpath refid="class.path"/>
	    	<include name="**/*.java"/>
	    </javac>

		<mkdir dir="${build.dir}/META-INF/services" />
		<echo file="${build.dir}/META-INF/services/${service.class}" append="false">${service.provider}</echo>

        <echo>+--------------------------------------------------------------------+</echo>
        <echo>|        B U I L D I N G   N A T I V E - L I B R A R I E S           |</echo>
        <echo>+--------------------------------------------------------------------+</echo>		
