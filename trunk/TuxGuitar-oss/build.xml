			<env key="LIBRARY_EXTENSION" value="${build.jni.library.extension}"/>
		</exec>				
		
		<copy todir="${build.jni.library.dir}"><fileset file="${jni.dir}/${build.jni.library.prefix}${build.jni.library.name}${build.jni.library.extension}"/></copy>
