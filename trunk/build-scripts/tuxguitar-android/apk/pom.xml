<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<artifactId>tuxguitar-android-build-pom</artifactId>
		<groupId>org.herac.tuxguitar</groupId>
		<version>SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>tuxguitar-android-build-apk</artifactId>
	<packaging>apk</packaging>
	<name>${project.artifactId}</name>

	<properties>
		<project.versionCode>1</project.versionCode>
		<project.resources.directory>${project.basedir}/../apk-resources/target</project.resources.directory>
		<project.assets.directory>${project.resources.directory}/assets</project.assets.directory>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-build-apk-resources</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-lib</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-gm-utils</artifactId>
			<version>SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-resources</artifactId>
			<version>SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-gervill</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-gervill-soundbank</artifactId>
			<version>SNAPSHOT</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-midi</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-midimaster</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-browser-saf</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.herac.tuxguitar</groupId>
			<artifactId>tuxguitar-android-gdrive</artifactId>
			<version>${project.version}</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		
		<!-- 3RD PARTY LIBRARIES -->
		<dependency>
			<groupId>com.google.android.gms</groupId>
			<artifactId>play-services-auth</artifactId>
			<version>8.3.0</version>
			<type>aar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.apis</groupId>
		    <artifactId>google-api-services-drive</artifactId>
		    <version>v2-rev240-1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.api-client</groupId>
		    <artifactId>google-api-client</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.api-client</groupId>
		    <artifactId>google-api-client-android</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.http-client</groupId>
		    <artifactId>google-http-client</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.http-client</groupId>
		    <artifactId>google-http-client-android</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.http-client</groupId>
		    <artifactId>google-http-client-gson</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.oauth-client</groupId>
		    <artifactId>google-oauth-client</artifactId>
		    <version>1.22.0</version>
		    <scope>compile</scope>
		</dependency>
		<dependency>
		    <groupId>com.google.code.gson</groupId>
		    <artifactId>gson</artifactId>
		    <version>2.7</version>
		    <scope>compile</scope>
		</dependency>
		<!-- /3RD PARTY LIBRARIES -->
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>com.simpligility.maven.plugins</groupId>
				<artifactId>android-maven-plugin</artifactId>
				<version>4.3.0</version>
				<extensions>true</extensions>
				<configuration>
					<sdk>
						<platform>25</platform>
						<buildTools>25.0.0</buildTools>
					</sdk>
					<assetsDirectory>${project.assets.directory}</assetsDirectory>
					<dexCoreLibrary>true</dexCoreLibrary>
				</configuration>
				<executions>
					<execution>
						<id>update-manifest</id>
						<phase>process-resources</phase>
						<goals>
							<goal>manifest-update</goal>
						</goals>
						<configuration>
							<manifest>
								<versionName>${project.version}</versionName>
								<versionCode>${project.versionCode}</versionCode>
							</manifest>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
