<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        style="?attr/dialogStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/track_channel_dlg_channel_label"
            style="?attr/textViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignBottom="@+id/track_channel_dlg_settings_button"
            android:layout_alignTop="@+id/track_channel_dlg_settings_button"
            android:gravity="center"
            android:text="@string/track_channel_dlg_channel_label" />

        <Spinner
            android:id="@+id/track_channel_dlg_channel_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/track_channel_dlg_settings_button"
            android:layout_alignTop="@+id/track_channel_dlg_settings_button"
            android:layout_toRightOf="@+id/track_channel_dlg_channel_label"
            android:layout_toLeftOf="@+id/track_channel_dlg_settings_button" />

        <ImageView
            android:id="@+id/track_channel_dlg_settings_button"
            style="?attr/dialogImageButtonSettingsStyle"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/track_channel_dlg_settings_label" />
    </RelativeLayout>

</ScrollView>