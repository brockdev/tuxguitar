			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
		<CheckBox
			android:id="@+id/repeat_alternative_dlg_alt_2"
			android:text="2"
			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
