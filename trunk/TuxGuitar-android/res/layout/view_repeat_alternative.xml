			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
		<CheckBox 
			android:id="@+id/repeat_alternative_dlg_alt_6"
			android:text="6" 
			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
		<CheckBox 
			android:id="@+id/repeat_alternative_dlg_alt_7"
			android:text="7" 
			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
		<CheckBox 
			android:id="@+id/repeat_alternative_dlg_alt_8"
			android:text="8" 
			android:layout_gravity="fill_horizontal|center_vertical"
			android:layout_columnWeight="1"/>
	
	</GridLayout>

</ScrollView>