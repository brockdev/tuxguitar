<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" 
	android:layout_height="match_parent"
	style="?attr/dialogStyle">

	<GridLayout
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:columnCount="2">

		<TextView 
			android:id="@+id/bend_dlg_preset_label"
			android:text="@string/bend_dlg_preset_label" 
			android:layout_gravity="fill_horizontal|center_vertical" />
		
		<Spinner 
			android:id="@+id/bend_dlg_preset_value"
			android:layout_gravity="fill_horizontal|center_vertical" />
		
		<Space
			android:layout_gravity="fill"
			android:layout_columnSpan="2"
			style="?attr/dialogVerticalSpacerStyle" />
			
		<org.herac.tuxguitar.android.view.dialog.bend.TGBendEditor
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/bend_dlg_bend_editor" 
			android:layout_width="fill_parent"
			android:layout_height="fill_parent" 
			android:layout_columnSpan="2" />

	</GridLayout>

</ScrollView>